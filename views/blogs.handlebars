<div class="col-12">
  <div class="row">
    <div class="col-12">MechDog TechBlogs</div>

    <div class="col-12 bg-dark text-light">{{title}}</div>
    <div class="col-12">{{blogs.message}}</div>
    <div class="col-6">{{blogs.user.username}}</div>
    <div class="col-6">{{format_date blogs.createdAt}}</div>
    {{#each comments as |comment|}}
    <div class="col-12">{{comment.message}}</div>
    <div class="col-6">{{comment.user.username}}</div>
    <div class="col-6">{{format_date comment.createdAt}}</div>
    {{/each}}
  </div>
</div>